<h1><%= @wiki.title %></h1>

  <div class="form-group">
    <%= form_for @wiki do |f| %>
      <% f.label :title -%>
      <%= f.text_area :title, rows: 1, class: 'form-control', placeholder: "Enter wiki title" %>
      <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter wiki body" %>
    <br />
    
    <%= f.submit "Save", class: 'btn btn-success' %>
    <%= link_to "Back", wikis_path, :class => 'btn btn-large btn-primary' %>
    <% end %>
  </div>