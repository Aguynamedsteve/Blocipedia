<%= form_tag charges_path do %>
  <article>
    <label class="amount">
      <span>Amount: $5.00</span>
    </label>
  </article>
    <%= hidden_field_tag :amount, @amount %>
      <script
        src="https://checkout.stripe.com/checkout.js" class="stripe-button"
        data-key=<%= Rails.configuration.stripe[:publishable_key] %>
        data-image="http://www.officialpsds.com/images/thumbs/Dollar-sign-psd30864.png"
        data-name="Premium Subscription"
        data-description="$5.00"
        data-amount="500">
      </script>
<% end %>
  
  